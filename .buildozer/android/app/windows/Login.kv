<LoginLayout@FloatLayout>:
    size_hint: None, None
    size: 566, 672
    top: 800-64
    x: 357.05
    canvas.before:
        Color:
            rgba: (140/255,198/255,62/255, 0.2)
        Rectangle:
            size: self.size
            pos: self.pos

<LoginLabel@Label>:
    font_size: 30
    font_name: "montserrat"
    color: 0,0,0,1
    size_hint: None, None
    size: 352, 38
    text_size:352, 38
    halign: "left"
    valign: "middle"

<LoginInput@TextInput>:
    padding: 15
    font_size: 24
    font_name: "montserrat"
    color: 0,0,0,1
    size_hint: None, None
    size: 352, 64
    halign: "center"
    valign: "middle"
    background_color: 1,1,1,1
    background_normal: ''
    multiline: False
    password: False

<LoginButton@Button>
    font_size: 30
    font_name: "montserrat"
    color: 1,1,1,0.71
    size_hint: None, None
    size: 352,64
    halign: "center"
    valign: "middle"
    background_color:61/255,119/255,0/255,0.7
    background_normal: ''


<CustomSpinner@Spinner>:
    font_size: 30
    font_name: "montserrat"
    color: 1,1,1,0.71
    size_hint: None, None
    size: 352,64
    halign: "center"
    valign: "middle"
    background_color:61/255,119/255,0/255,0.7
    background_normal: ''
    top: 800-628
    x:464


<LoginProyectoPopup@Popup>:
    id_proyectos: id_proyectos
    size_hint: None, None
    top: 800-232
    x: 357
    size: 566,336
    background:""
    background_color: (0,0,0, 0.8)
    separator_color: 0,0,0,0
    title_size: 43
    font_name: "montserrat"
    title_align: "center"
    title_color: 0,0,0,1


    FloatLayout:
        size_hint: None, None
        size: 566,116
        CustomSpinner:
            id: id_proyectos
            x: 464
            top: 800 - 467
            text: "Proyecto"

<LoginScreen>:

    id_username: id_username
    id_password: id_password
    id_mensaje: id_mensaje
    id_buttonIngresar: id_buttonIngresar

    LoginLayout:
        Button:
            background_normal: './images/logo_black.png'
            background_down: './images/logo_black.png'
            size_hint: None, None
            size: 369, 220
            x: 464
            top: 800 - 84
        BoxLayout:
            orientation: "vertical"
            size_hint: None, None
            size: 352, 227
            top: 800-304
            x: 464
            LoginLabel:
                text: "Username"
            LoginInput:
                id: id_username
                focus: True
                on_text_validate: root.check_username()
            LoginLabel:
                text: "Password"
            LoginInput:
                id: id_password
                padding: 20
                password: True
                on_text_validate: root.check_password()

        LoginLabel:
            id: id_mensaje
            color: 1,0,0,1
            halign: "center"
            x: 464
            top: 800 - 564

        LoginButton:
            id: id_buttonIngresar
            text: "Ingresar"
            top: 800-628
            x:464
            on_release: root.check_password()